<h1>Books#index</h1><!--全ユーザーの本の投稿一覧-->

<main>
   <%= render 'book' %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "default-image.jpeg",size:'50x50',format: 'default-image.jpeg' %>
     </td>
        <td><%= link_to "title", user_path(:user_id) %></td>
        <td><%= book_body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
</main>

</body>