<h4>users#show</h4>
<main>
 <%= render 'user', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
  <table class="table">
   <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
   </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%#= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "default-image.jpeg",size:'80x80',format: 'default-image.jpeg' %>
        </td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
       </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>
</div>
</main>