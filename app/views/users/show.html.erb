<!--usersページのshowページ/投稿後に飛んでくるbook_detailページ-->

<main>
 <%= render 'user', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
           <td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %></td>
            <%#= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
            <td><%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
        </tr>
      </table>
    </div>
  </div>
</div>
</main>