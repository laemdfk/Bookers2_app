<body>
  <main>
    <p id="notice"></p>
     <div class="container">
      <div class="row">
         <% if @user.errors.any? %>
         <h4><%= @user.errors.count %>errors prohibited this book from being saved.</h4>
   　　　　<ul>
   　　　　　 <% @user.errors.full_messages.each do |message| %>
    　　　<li><%= message %></li>
    　　　<% end %>
   　　　</ul>
 　　　　</div>
　　<% end %>

     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

        <%#= form_for(@user, url: user_path(current_user.id)) do |f| %>
        
        <!--form_withはform_with〜endまでの間で認識される-->
        <!--divなどで区切ると、ActiveSupport::MessageVerifier::InvalidSignatureを誘発する-->
        
        <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

        <div class="form-group">
        
          <%= f.label :name %><br>
          <%= f.text_field :name, :size=>"47" %><br/>
       
        </div>

       <div class="form-group">
         <br><%= f.label :profile_image %><br>
          <%= f.file_field :profile_image, accept: "image/*" %><br/>
        </div>


      <div class="form-group">
        <br><%= f.label :introduction %><br/>
         <%= f.text_area :introduction, :size=>"47.5pxx62px" %><br/>
      </div>

      <div class="form-group">
         <br><%= f.submit 'Update User',class:"btn btn-secondary" %><br />
      </div>
     <% end %>
     </div>
    </div>
   </main>
</body>